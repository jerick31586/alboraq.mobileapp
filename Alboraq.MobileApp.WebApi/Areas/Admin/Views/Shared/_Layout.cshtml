<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/dist/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Alboraq Automobiles", "index", "home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">                
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Appointment", "Index", "Appt", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Sales Orders", "Index", "Prod", new { area = "" }, null)</li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown">@User.Identity.Name &nbsp;<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Appointments", "Index", "Appt", new { area = "" }, null)</li>
                                <li>@Html.ActionLink("Sales Orders", "Index", "Prod", new { area = "" }, null)</li>
                                <li><a href="@Url.Action("settings", "admin", new { area = "" }, null)" id="linkSettings"><i class="fa fa-cog"></i> &nbsp; Settings</a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("signout", "auth", new { area = "" })"><i class="fa fa-sign-out"></i> &nbsp; Sign out</a></li>
                            </ul>
                        </li>                            
                    </ul>                    
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Alboraq App. Alboraq Automobiles Co. w.l.l. </p>
        </footer>
    </div>


    <script src="~/dist/js/lib.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
