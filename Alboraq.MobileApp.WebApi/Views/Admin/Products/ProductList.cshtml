@model IEnumerable<Alboraq.MobileApp.Core.Entities.Product>
@{
    ViewBag.Title = "ProductList";
}

<h2>Product List</h2>

<p><a href="@Url.Action("newproduct", "prod")" class="btn btn-default">Add New product</a></p>


@if (Model.Count() > 0)
{
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product no</th>
                <th>Product name</th>
                <th>Description</th>
                <th>Unit price</th>
                <th>Quantity</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("productDetails","prod", new { productNo = product.ProductNo })">
                            @if (product.Image == null)
                            {
                                <img src="~/dist/images/noimage.png" alt="@product.ProductName" height="100" width="100" />
                            }
                            else
                            {
                                <img src="@Url.Action("RetrieveProductImage","prod", new { productNo = product.ProductNo })"
                                     alt="@product.ProductName" height="100" width="100" />
                            }                            
                        </a>
                    </td>
                    <td>@product.ProductNo</td>                    
                    <td>@product.ProductName</td>
                    <td>@product.ProductDescription</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.Qoh</td>
                    <td>@product.ProductCategory.CategoryDescription</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p class="text-center">No products available</p>
    </div>        
}

