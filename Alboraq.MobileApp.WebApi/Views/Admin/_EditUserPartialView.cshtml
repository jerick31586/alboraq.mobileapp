@model Alboraq.MobileApp.WebApi.Models.UpdateBindingModel

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("updateuser", "admin", FormMethod.Post, new { id = "frmUpdateUser" }))
        {
            <h4>User Profile</h4>
            @Html.HiddenFor(user => user.UserID)
            <div class="form-group">
                @Html.LabelFor(user => user.Name)
                @Html.TextBoxFor(user => user.Name, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.PhoneNumber)
                @Html.TextBoxFor(user => user.PhoneNumber, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <button id="btnUpdateUser" type="submit" class="btn btn-default">Update</button>
            </div>
        }
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmAddUserToRole"}))
        {
            <h4>Add to role</h4>
            <div class="form-group">
                <div class="input-group">                    
                    <span id="addToRoleStatus"></span>
                    @Html.DropDownList("Roles", null, null, new { @class = "form-control" })
                    <span class="input-group-btn">                        
                        <button type="button" id="btnAddToRole" class="btn btn-default"
                                data-loading-text="Adding to role...">Add</button>
                    </span>
                </div>                
            </div>
            
        }
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in ViewBag.UserRoles)
                {
                    <tr>
                        <td><button type="button" class="btn btn-danger btn-xs">Remove</button></td>
                        <td>@role</td>
                    </tr>
                }                
            </tbody>
        </table>
    </div>
</div>

