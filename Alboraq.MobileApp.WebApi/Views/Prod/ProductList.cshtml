@model IEnumerable<Alboraq.MobileApp.Core.Entities.Product>
@{
    ViewBag.Title = "ProductList";
}

<h2>Product List</h2>

@if (Model.Count() > 0)
{
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product no</th>
                <th>Prodcut name</th>
                <th>Description</th>
                <th>Unit price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @*<img src="@Url.Action("retrieveimage","prod", new { ID = product.ID })" alt="@product.ProductName" height="100" width="100" />*@
                        <img src="/products/retrieveimage/@product.ID" alt="@product.ProductName" height="100" width="100" />
                    </td>
                    <td>@product.ProductNo</td>                    
                    <td>@product.ProductName</td>
                    <td>@product.ProductDescription</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.Qoh</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p class="text-center">No products available</p>
    </div>        
}

