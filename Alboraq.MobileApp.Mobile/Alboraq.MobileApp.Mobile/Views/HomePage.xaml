<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alboraq.MobileApp.Mobile.Views.HomePage"
             xmlns:vm="clr-namespace:Alboraq.MobileApp.Mobile.ViewModels">

  <ContentPage.BindingContext>
    <vm:HomeViewModel/>
  </ContentPage.BindingContext>
  
    <ContentPage.Content>
    <StackLayout HorizontalOptions="FillAndExpand" Padding="10,10,10,0" BackgroundColor="White">

      <Label Text="Home page"/>

      <StackLayout Spacing="10">
        <Label Text="{Binding LoginTest.AccessToken}" FontSize="15"/>
        <Label Text="{Binding LoginTest.TokenType}" FontSize="15"/>
        <Label Text="{Binding LoginTest.ExpiresIn}" FontSize="15"/>
        <Label Text="{Binding LoginTest.Username}" FontSize="15"/>
        <Label Text="{Binding LoginTest.DateIssued}" FontSize="15"/>
        <Label Text="{Binding LoginTest.DateExpires}" FontSize="15"/>
      </StackLayout>
      
      <ListView ItemsSource="{Binding Features}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Title}"
                      Detail="{Binding Detail}">
            </TextCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      
    </StackLayout>
    </ContentPage.Content>
</ContentPage>